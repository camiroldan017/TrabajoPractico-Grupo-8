<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "../hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="datos.Contacto" table="contacto">
        <id name="idContacto" column="idContacto">
            <generator class="identity" />
        </id>

        <property column="email" name="email" type="string" />
        <property column="telefono" name="telefono" type="string" />
        <property column="direccion" name="direccion" type="string" />

        <!-- Sucursal es quien posee la relaciÃ³n (constrained="true") -->
        <one-to-one name="sucursal" class="datos.Sucursal" property-ref="contacto" />
    </class>

</hibernate-mapping>